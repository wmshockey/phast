<h3>Elevation</h3>
<%= form_for([@pipeline, @elevation]) do |f| %>
  <p>
  <% if @elevation.errors.any? %>
    <div id="error_explanation", class="bg-danger">
      <%= pluralize(@elevation.errors.count, "error") %> prohibited this elevation from being saved:

      <ul>
      <% @elevation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </p>

<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
	  <th>Distance (kmp)</th>
      <th>Elevation (meters)</th>
    </tr>
  </thead>

  <tbody>
      <tr>
		<td><%= f.number_field :kmp,  :step => "any"  %></td>
        <td><%= f.number_field :elevation, :step => "any" %></td>
      </tr>
  </tbody>
</table>
<div class="actions">
  <span class="col-sm-2"><%= f.submit %></span><span class="col-sm-2"><%= link_to 'Back', :back %></span>
</div>
<% end %>
