<p id="notice"><%= notice %></p>

<%= render 'pipelines/show_one' %>

<h2>Elevation</h2>
<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
	  <th>Distance (kmp)</th>
      <th>Elevation (meters)</th>
    </tr>
  </thead>

  <tbody>
      <tr>
		<td><%= @elevation.kmp %></td>
        <td><%= @elevation.elevation %></td>
      </tr>
  </tbody>
</table>

<nav class="navbar navbar-default small">
  <div class="container-fluid">
	<ul class="nav navbar-nav">
		<li><%= link_to 'Edit Elevation', edit_pipeline_elevation_path(@elevation.pipeline_id, @elevation.id) %> </li>
		<li><%= link_to 'Delete', pipeline_elevation_path(@elevation.pipeline_id, @elevation.id), method: :delete, data: { confirm: 'Are you sure you want to delete this elevation?' } %> </li>
		<li><%= link_to 'Back', pipeline_path(@pipeline) %> </li>
	</ul>
  </div>
</nav>
