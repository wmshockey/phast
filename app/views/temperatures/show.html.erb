<p id="notice"><%= notice %></p>
<%= render 'pipelines/show_one' %>

<h2>Temperature</h2>
<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
	  <th>Distance (kmp)</th>
      <th>Temperature (deg C)</th>
    </tr>
  </thead>

  <tbody>
      <tr>
		<td><%= @temperature.kmp %></td>
        <td><%= @temperature.temperature %></td>
      </tr>
  </tbody>
</table>

<nav class="navbar navbar-default small">
  <div class="container-fluid">
	<ul class="nav navbar-nav">
		<li><%= link_to 'Edit Temperature', edit_pipeline_temperature_path(@temperature.pipeline_id, @temperature.id) %> </li>
		<li><%= link_to 'Delete', pipeline_temperature_path(@temperature.pipeline_id, @temperature.id), method: :delete, data: { confirm: 'Are you sure you want to delete this temperature?' } %> </li>
		<li><%= link_to 'Back', pipeline_path(@pipeline) %> </li>
	</ul>
  </div>
</nav>

