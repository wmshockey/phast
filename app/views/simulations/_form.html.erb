<h2>Simulation</h2>
<%= form_for(@simulation) do |f| %>
	 <p>
	 <% if @simulation.errors.any? %>
	   <div id="error_explanation">
	     <h2><%= pluralize(@simulation.errors.count, "error") %> prohibited this simulation from being saved:</h2>

	     <ul>
	     <% @simulation.errors.full_messages.each do |message| %>
	       <li><%= message %></li>
	     <% end %>
	     </ul>
	   </div>
	 <% end %>
	 </p>

	<table class="fixed", style="width: 600px;">
		<thead>
			<tr>
				<th>Pipeline Simulation</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><strong>Name: </strong></td><td><%= f.text_field :name  %></td>
			</tr>
			<tr>
				<td><strong>Description: </strong></td><td><%= f.text_field :description %></td>
			</tr>
			<tr>
				<td><strong>Pipeline: </strong></td><td><%= f.select :pipeline_name , Pipeline.all.collect {|p| [p.name]} %></td>
			</tr>
			<tr>
				<td><strong>Nomination: </strong></td><td><%= f.select :nomination_name , Nomination.all.collect {|n| [n.name]} %></td>
			</tr>
			<tr>
				<td><strong>Max Flowrate: </strong></td><td><%= f.number_field :max_flowrate, :step => "any"  %></td>
			</tr>
			<tr>
				<td><strong>Max Batch Size: </strong></td><td><%= f.number_field :max_batchsize, :step => "any"  %></td>
			</tr>
		</tbody>
	</table>

	<div class="actions">
	   <%= f.submit %>
	</div>
<% end %>
