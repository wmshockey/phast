	<% if !success.nil? %>
	  <p class = "bg-success strong"><%= success %></p>
	<% end %>
	<% if !notice.nil? %>
	  <p class="bg-info strong"><%= notice %></p>
	<% end %>
	<% if !alert.nil? %>
	  <p class="bg-warning strong"><%= alert %></p>
	<% end %>
	<% if !error.nil? %>
	  <p class="bg-danger strong"><%= error %></p>
	<% end %>

    <div class="col-sm-12">
	  <%= yield %>
