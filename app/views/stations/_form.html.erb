<h3>Station</h3>
<%= form_for([@pipeline, @station]) do |f| %>
  <p>
  <% if @station.errors.any? %>
    <div id="error_explanation", class="bg-danger">
      <%= pluralize(@station.errors.count, "error") %> prohibited this station from being saved:

      <ul>
      <% @station.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </p>

	<table class="table table-bordered table-hover table-condensed">
	  <thead>
	    <tr>
		  <th>Distance (kmp)</th>
	      <th>Station Name</th>
	    </tr>
	  </thead>

	  <tbody>
	      <tr>
			<td><%= f.number_field :kmp,  :step => "any"  %></td>
	        <td><%= f.text_field :name %></td>
	      </tr>
	  </tbody>
	</table>
	<div class="actions">
	   <span class="col-sm-2"><%= f.submit %></span><span class="col-sm-2"><%= link_to 'Back', :back %></span>
	</div>

<% end %>
