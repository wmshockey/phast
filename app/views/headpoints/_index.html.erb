<h2>Headpoints</h2>
<table>
  <% head_units = @pump.head_units %>
  <% flow_units = @pump.flow_units %>
  <thead>
    <tr>
      <th>Flow (m3/hr)</th>
      <th>Head (meters)</th>
    </tr>
  </thead>
  <tbody>
    <% @pump.headpoints.order(flow: :asc).each do |headpoint| %>
	  <% if !headpoint.id.nil? then %>
	      <tr>
			<% flow = headpoint.flow * $Gpm_m3hr %>
	        <td><%= link_to flow.round(2), pump_headpoint_path(headpoint.pump_id, headpoint.id) %></td>
	        <td><%= (headpoint.head * $Ft_m).round(2) %></td>
	      </tr>
	  <% end %>
	<% end %>
    <tr><td colspan="2"><%= link_to 'Add Headpoint', new_pump_headpoint_path(@pump) %></td></tr>
  </tbody>
</table>

<br>


