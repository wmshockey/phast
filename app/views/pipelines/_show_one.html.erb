<h2>Pipeline  <%= image_tag "pipeline-icon.png"%></h2>
<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
	  <% if current_user.admin? then %>
		<th>User</th>
	  <% end %>
      <th>Pipeline Name</th>
	  <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <tr>
	  <% if current_user.admin? then %>
		<td><%= (User.find {|u| u.id == @pipeline.user_id}).email %></td>
	  <% end %>
      <td><%= @pipeline.name %></td>
      <td display="inline-block"><%= @pipeline.description %><br>
            <%= link_to "Stations: #{@pipeline.stations.count}", pipeline_stations_path(@pipeline)%>
            <%= link_to "Segments: #{@pipeline.segments.count}", pipeline_segments_path(@pipeline)%>
            <%= link_to "Elevations: #{@pipeline.elevations.count}", pipeline_elevations_path(@pipeline)%>
			<%= link_to "Temperatures: #{@pipeline.temperatures.count}", pipeline_temperatures_path(@pipeline)%>
			<%= link_to "DRA Regions: #{@pipeline.dras.count}", pipeline_dras_path(@pipeline)%>
	  </td>
    </tr>
  </tbody>
</table>

<nav class="navbar navbar-default">
  <div class="container-fluid">
	<ul class="nav navbar-nav">
		<li><%= link_to 'Edit Pipeline', edit_pipeline_path(@pipeline) %> </li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Show<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Stations', pipeline_stations_path(@pipeline)%></li>
            <li><%= link_to 'Segments', pipeline_segments_path(@pipeline)%></li>
            <li><%= link_to 'Elevations', pipeline_elevations_path(@pipeline)%></li>
			<li><%= link_to 'Temperatures', pipeline_temperatures_path(@pipeline)%></li>
			<li><%= link_to 'DRA Regions', pipeline_dras_path(@pipeline)%></li>
		  </ul>		
		<li><%= link_to 'Delete', pipeline_path(@pipeline.id), method: :delete, data: { confirm: 'Are you sure you want to delete this pipeline?' } %> </li>
		<li><%= link_to 'Copy', copy_pipeline_path(@pipeline.id), data: {confirm: 'Are you sure you want to make a copy of this pipeline?' } %> </li>
		<li><%= link_to 'Back', pipelines_path %></li>
	</ul>
  </div>
</nav>
