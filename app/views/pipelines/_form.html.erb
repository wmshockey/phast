      <% end %>
      </ul>
    </div>
  <% end %>
  </p>

	<table class="table table-bordered table-hover table-condensed">
	  <thead>
	    <tr>
	      <th>Pipeline Name</th>
		    <th>Description</th>
	    </tr>
	  </thead>

	  <tbody>
	      <tr>
	        <td><%= f.text_field :name %></td>
	        <td><%= f.text_field :description, :size=>"120" %></td>
	      </tr>
	  </tbody>
	</table>
<%= f.submit :Submit, class: 'btn btn-success' %>
