<div class="col-sm-2"></div>
<div class="col-sm-10">
<h3>Segment  <%= image_tag "pipe-segment-icon.png"%></h3>
<%= form_for([@pipeline, @segment]) do |f| %>
<p>
<% if @segment.errors.any? %>
  <div id="error_explanation", class="alert alert-danger">
    <%= pluralize(@segment.errors.count, "error") %> prohibited this segment from being saved:
    <ul>
    <% @segment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
</p>

<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
	  <th>Distance (<%= @pipeline.dist_unit%>post)</th>
      <th>Diameter (<%= @pipeline.diam_unit%>)</th>
	  <th>Thickness (<%= @pipeline.thick_unit%>)</th>
      <th>Roughness (<%= @pipeline.ruff_unit%>)</th>
	  <th>MAWP (<%= @pipeline.pres_unit%>)</th>
    </tr>
  </thead>

  <tbody>
      <tr>
		<td style="width: 120px;"><%= f.number_field :kmp,  :step => "any"  %></td>
        <td style="width: 160px;"><%= f.number_field :diameter,  :step => "any"   %></td>
        <td style="width: 160px;"><%= f.number_field :thickness,  :step => "any"   %></td>
        <td style="width: 160px;"><%= f.number_field :roughness,  :step => "any"  %></td>
        <td style="width: 160px;"><%= f.number_field :mawp,  :step => "any"   %></td>
      </tr>
  </tbody>
</table>
<%= f.submit :Submit, class: 'btn btn-success' %>
<%= link_to 'Back', :back, class: 'btn btn-default' %>
<% end %>
</div>
