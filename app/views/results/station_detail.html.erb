<%= render 'top' %>

<% station_name = @results.first.stat %>
<h2>Step Detail for Station: <%= station_name %></h2>

<table>
  <thead>
   <tr>
      <th>Step</th>
	  <th>Flowrate</th>
	  <th>Pumped<br>Volume</th>
	  <th>Up<br>stream<br>Batch</th>
	  <th>Down<br>stream<br>Batch</th>
	  <th>Holding</th>
	  <th>Suction</th>
	  <th>Head</th>
	  <th>Case</th>
	  <th>Discharge</th>
	  <th>HHP<br>(KW)</th>
    </tr>
  </thead>

<br>
  <tbody>
	<% @results.each do | i | %>
      <tr>
		<% step_string = "#{i.step} @ #{i.timestamp.strftime("%Y-%m-%d %H:%M")}" %>
		<td><%= link_to step_string, station_step_detail_result_path(:id => @sim_id, :step => i.step) %></td>
		<td><%= '%8.2f'% i.flow %></td>
		<td><%= '%10.2f'% i.pumped_volume %></td>
		<td><%= i.upstream_batch %></td>
		<td><%= i.downstream_batch %></td>
		<td><%= '%.2f'% i.hold %>
		<td><%= '%.2f'% i.suct %>
        <td><%= '%.2f'% i.head %></td>
        <td><%= '%.2f'% i.casep %></td>
        <td><%= '%.2f'% i.disc %></td>
		<td><%= '%.1f'% i.hhp %></td>
      </tr>
	<% end %>
  </tbody>
</table>
