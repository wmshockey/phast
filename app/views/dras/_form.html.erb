<div class="col-sm-2"></div>
<div class="col-sm-10">
<h3>DRA Region  <%= image_tag("dra-icon.png") %></h3>
<%= form_for([@pipeline, @dra]) do |f| %>
  <p>
  <% if @dra.errors.any? %>
    <div id="error_explanation", class="alert alert-danger">
      <%= pluralize(@dra.errors.count, "error") %> prohibited this DRA from being saved:

      <ul>
      <% @dra.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </p>

	<table class="table table-bordered table-hover table-condensed">
	  <thead>
	    <tr>
		  <th>DRA Injection point (kmp)</th>
	      <th>DRA End point (kmp)</th>
		  <th>DRA Percentage</th>
	    </tr>
	  </thead>

	  <tbody>
	      <tr>
			<td><%= f.number_field :start_kmp,  :step => "any"  %></td>
	        <td><%= f.number_field :end_kmp, :step => "any" %></td>
			<td><%= f.number_field :dra_percent, :step => "any" %></td>
	      </tr>
	  </tbody>
	</table>
<%= f.submit :Submit, class: 'btn btn-success' %>
<%= link_to 'Back', :back, class: 'btn btn-default' %>
<% end %>
</div>

