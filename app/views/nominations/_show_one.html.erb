<h2>Nomination <%= image_tag("nomination-icon.png") %></h2>

<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Nomination Name</th>
	  <th>Description</th>
	  <th>Pipeline</th>
	  <th>Nomination Date</th>
	  <th>Period (days)</th>
	  <th>Total Volume (m3)</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @nomination.name %></td>
      <td><%= @nomination.description %></td>
	  <td><%= @pipeline.name %></td>
	  <td><%= @nomination.nom_date %></td>
	  <td><%= @nomination.period %></td>
	  <td><%= @nomination.total_volume %></td>
    </tr>
  </tbody>
</table>

<nav class="navbar navbar-default">
  <div class="container-fluid">
	<ul class="nav navbar-nav">
		<li><%= link_to 'Edit Nomination', edit_nomination_path(@nomination) %> </li>
		<li><%= link_to 'Delete', nomination_path(@nomination.id), method: :delete, data: { confirm: 'Are you sure you want to delete this nomination?' } %> </li>
		<li><%= link_to 'Copy', copy_nomination_path(@nomination.id), data: {confirm: 'Are you sure you want to make a copy of this nomination?' } %> </li>
		<li><%= link_to 'Back', nominations_path %> </li>
	</ul>
  </div>
</nav>
