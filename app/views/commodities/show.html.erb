<h2>Commodity  <%= image_tag "commodity-icon.png"%></h2>
<table class="table table-bordered table-hover table-condensed">
  <tbody>
		<% if current_user.admin? then %>
			<tr><td><strong>User: </strong></td><td><%= (User.find {|u| u.id == @commodity.user_id}).email %></td></tr>
		<% end %>
		<tr><td><strong>Commodity ID:</strong></td><td><%= @commodity.commodity_id %></td></tr>
        <tr><td><strong>Commodity Name:</strong></td><td><%= @commodity.commodity_name %></td></tr>
	    <tr><td><strong>Temperature point 1 (Dec C):</strong></td><td><%= @commodity.temp1 %></td></tr>
		<tr><td><strong>Viscosity point 1 (cst):</strong></td><td><%= @commodity.visc1 %></td></tr>
		<tr><td><strong>Temperature point 2 (Deg C):</strong></td><td><%= @commodity.temp2 %></td></tr>
		<tr><td><strong>Viscosity point 2 (cst):</strong></td><td><%= @commodity.visc2 %></td></tr>
		<tr><td><strong>Density (kg/m3):</strong></td><td><%= @commodity.density %></td></tr>
		<tr><td><strong>Density Conversion Factor:</strong></td><td><%= @commodity.density_cf %></td></tr>
		<tr><td><strong>Vapor Pressure (kpa):</strong></td><td><%= @commodity.vapor %></td></tr>
  </tbody>
</table>

<nav class="navbar navbar-default">
  <div class="container-fluid">
	<ul class="nav navbar-nav">
		<li><%= link_to 'Edit Commodity', edit_commodity_path(@commodity) %> </li>
		<li><%= link_to 'Delete', commodity_path(@commodity.id), method: :delete, data: { confirm: 'Are you sure you want to delete this commodity?' } %> </li>
		<li><%= link_to 'Copy', copy_commodity_path(@commodity.id), data: {confirm: 'Are you sure you want to make a copy of this commodity?' } %> </li>
		<li><%= link_to 'Back', commodities_path %> </li>
	</ul>
  </div>
 </nav>
<br>




